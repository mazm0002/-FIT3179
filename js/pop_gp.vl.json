{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Population vs GDP of countries",
  "data": {
    "url": "https://raw.githubusercontent.com/mazm0002/FIT3179/main/data/countries%20of%20the%20world.csv"
  },
  "transform": [
    {"filter": "datum.GDPperCap > 0"},
    {"filter": "datum.Population > 0"}
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Population",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1000, 100000000000]}
    },
    "y": {
      "field": "GDPperCap",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 10000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {"field": "Region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [5, 30, 70, 130, 200, 300]
          },
          "legend": {"format": ".1s"}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "GDPperCap", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.Country == 'China' || datum['Country'] == 'Australia' ||datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "GDPperCap", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}